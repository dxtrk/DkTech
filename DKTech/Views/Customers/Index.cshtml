@model IEnumerable<DKTech.Models.Customer>

@{
    // Sets the title of the page to "Index"
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!-- Link to create a new customer -->
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <!-- Table headers for customer properties -->
            <th>
                @Html.DisplayNameFor(model => model.Last_Name) @* Displays the header for Last Name *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName) @* // Displays the header for First Name *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email) @* // Displays the header for Email *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate) @* // Displays the header for Order Date *@
            </th>
            <th></th> <!-- Empty header for action links -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Table cells displaying customer data -->
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name) @* // Displays Last Name *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName) @* // Displays First Name *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email) @* // Displays Email *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate) @* // Displays Order Date *@
                </td>
                <td>
                    <!-- Action links for editing, viewing details, and deleting a customer -->
                    <a asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CustomerID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Custom styles for the body */
    body {
        font-family: Cambria, serif; /* Font style */
        color: black; /* Font color */
    }
</style>
