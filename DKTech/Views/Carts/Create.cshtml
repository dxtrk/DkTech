@model DKTech.Models.Cart

@{
    // Sets the title of the page
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Form for creating a new Cart entry -->
        <form asp-action="Create">
            <!-- Displays validation summary for model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Quantity input field -->
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <!-- Displays validation error for Quantity -->
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Total Price input field -->
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <!-- Displays validation error for Total Price -->
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <!-- Customer selection dropdown -->
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <!-- Dropdown for selecting CustomerID -->
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>

            <!-- Submit button for the form -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link to go back to the list of carts -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
        // Includes client-side validation scripts
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Custom styles for the body */
    body {
        font-family: Cambria, serif; /* Font style */
        color: black; /* Font color */
    }
</style>
