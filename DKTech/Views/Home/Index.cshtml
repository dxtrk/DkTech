@{
    // Set the title for the page in the ViewData
    ViewData["Title"] = "Home Page";
}

<style>
    /* CSS styling for the body of the document */
    body {
        font-family: Cambria, serif; /* Sets the font to Cambria */
    }
</style>

<!-- Container for the main title -->
<div class="text">
    <!-- Main heading for the website -->
    <h1 class="display-1 text-center text-dark">DK Tech</h1>
</div>

<!-- Carousel for image slideshow -->
<div id="demo" class="carousel slide" data-bs-ride="carousel">

    <!-- Indicators/dots for navigation -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    <!-- The slideshow/carousel content -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <!-- First slide image -->
            <img src="~/Images/Framework-4k.png" class="d-block w-100" alt="Slide 1">
        </div>
        <div class="carousel-item">
            <!-- Second slide image -->
            <img src="~/Images/Framework-4k.png" alt="Slide 2" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <!-- Third slide image -->
            <img src="~/Images/Framework-4k.png" alt="Slide 3" class="d-block w-100">
        </div>
    </div>

    <!-- Left control button for the carousel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <!-- Right control button for the carousel -->
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
